#include<bits/stdc++.h>
#define ll long long
#define maxn 1006
using namespace std;
int check[maxn];
int main()
{
    int t; cin>>t;
    while(t--)
    {
        int s, t;
        cin >> s >> t;
        memset(check, 0, sizeof(check));
        queue<pair<int, int >> q;
        q.push({s, 0});
        while(q.front().first!=t)
        {
        	int cur=q.front().first;
        	int step=q.front().second;
        	q.pop();
        	check[cur]=1;
        	if(!check[cur*2]&&cur<=t)
        	{
        		q.push({cur*2, step+1});
			}
			if(!check[cur-1]) q.push({cur-1, step+1});
		}
		cout << q.front().second << endl;
    }
}
